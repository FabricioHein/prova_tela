        android:id="@+id/editText4"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
